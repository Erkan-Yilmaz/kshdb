. $abs_top_srcdir/init/pre.sh
. $abs_top_srcdir/lib/journal.sh
set -- # reset $# so shunit2 doesn't get confused.

# load shunit2
srcdir=@srcdir@
srcdir=${srcdir%%/}/
if [[ ${0##*/} == ${.sh.file##*/} ]] ; then
