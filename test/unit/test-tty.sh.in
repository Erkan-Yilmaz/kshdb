#!@SH_PROG@
# -*- shell-script -*-
typeset -a _Dbg_fd=(1)

test_tty()
{
    _Dbg_open_if_tty test-tty.sh
    assertEquals "should be able to open test-tty.sh" "1" "$?"
    assertEquals "-1" "$_Dbg_new_fd"
    tty=$(tty)
    if (($? == 0)); then 
	if [[ $tty =~ 'not a tty' ]] ; then
	    result=1
	    :
	else
	    result=0
	fi
	_Dbg_open_if_tty $tty
	assertEquals "$result" "$?"
	if ((result == 0)) ; then
	    assertNotEquals "-1" "$Dbg_new_fd"
	    command exec {_Dbg_new_fd}>&- 
	    _Dbg_new_fd=-1
	    _Dbg_set_tty $tty
	    assertEquals "$result" "$?"
	    assertNotEquals "-1" "$Dbg_new_fd"
	fi
    fi
}

if [ '@abs_top_srcdir@' = '' ] ; then
  echo "Something is wrong abs_top_srcdir is not set."
 exit 1
fi
abs_top_srcdir=@abs_top_srcdir@

# Make sure $abs_top_srcdir has a trailing slash
abs_top_srcdir=${abs_top_srcdir%%/}/
. ${abs_top_srcdir}test/unit/helper.sh
. $abs_top_srcdir/lib/tty.sh
set -- # reset $# so shunit2 doesn't get confused.

[[ @CMDLINE_INVOKED@ ]] && . ${shunit_file}
